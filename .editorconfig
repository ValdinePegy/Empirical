#   @file  .editorconfig
#   @brief Defines project file formats.
#   Adapted largely from https://EditorConfig.org.
#

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# Matches multiple files with brace expansion notation
# Set default charset and tab width
[*.{js,py}]
charset = utf-8
indent_style = tab
tab_width = 2

# cpp and hpp file indentation
[*.{cpp,hpp}]
indent_style = tab

# Makefile indentation
[Makefile]
indent_style = tab

# Matches the exact files
[{package.json,.travis.yml, CI.yml}]
indent_style = tab
tab_width = 2
